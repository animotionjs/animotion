{
	"name": "@animotion/core",
	"version": "1.0.14",
	"description": "Core components for Animotion",
	"author": "animotionjs",
	"homepage": "https://animotion.pages.dev/",
	"bugs": "https://github.com/animotionjs/animotion/issues",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/animotionjs/animotion.git"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"animation",
		"library"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./theme": "./dist/styles/theme.css"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/package": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/eslint": "^8.56.10",
		"@types/reveal.js": "^5.0.3",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.41.0",
		"globals": "^15.7.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"publint": "^0.2.8",
		"svelte": "5.0.0-next.167",
		"svelte-check": "^3.8.4",
		"tslib": "^2.6.3",
		"typescript": "^5.5.2",
		"typescript-eslint": "8.0.0-alpha.36",
		"vite": "^5.3.2"
	},
	"dependencies": {
		"@animotion/motion": "^0.0.9",
		"@fontsource-variable/jetbrains-mono": "^5.0.21",
		"@fontsource-variable/manrope": "^5.0.20",
		"@tailwindcss/vite": "4.0.0-alpha.15",
		"reveal.js": "github:williamviktorsson/reveal.js",
		"shiki": "^1.10.0",
		"shiki-magic-move": "^0.4.2",
		"tailwindcss": "4.0.0-alpha.15"
	},
	"peerDependencies": {
		"svelte": "5.0.0-next.167"
	}
}
