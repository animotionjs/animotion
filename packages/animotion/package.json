{
	"name": "@animotion/core",
	"version": "0.1.5",
	"description": "Core components for Animotion",
	"author": "animotionjs",
	"homepage": "https://animotion.pages.dev/",
	"bugs": "https://github.com/animotionjs/animotion/issues",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/animotionjs/animotion.git"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"animation",
		"library"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./theme": "./dist/styles/theme.css",
		"./code": "./dist/styles/code.css"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.8",
		"@sveltejs/package": "^2.3.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@types/d3-interpolate": "^3.0.4",
		"@types/reveal.js": "^5.0.3",
		"d3-interpolate": "^3.0.1",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"publint": "^0.2.7",
		"reveal.js": "^5.1.0",
		"shiki": "^1.6.0",
		"shiki-magic-move": "^0.4.2",
		"svelte": "5.0.0-next.127",
		"svelte-check": "^3.7.1",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.11"
	},
	"dependencies": {
		"@animotion/motion": "^0.0.6",
		"@fontsource-variable/jetbrains-mono": "^5.0.21",
		"@fontsource-variable/manrope": "^5.0.20",
		"@tailwindcss/vite": "4.0.0-alpha.14",
		"tailwindcss": "4.0.0-alpha.14"
	}
}
